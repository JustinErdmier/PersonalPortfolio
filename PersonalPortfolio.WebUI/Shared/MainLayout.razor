<PageTitle>Justin Erdmier's Portfolio</PageTitle>

<MudThemeProvider Theme="appTheme" />
<MudDialogProvider />
<MudSnackbarProvider />

<MudLayout>

    <MudAppBar Color="Color.Primary"
               Fixed="true">

        <MudText Typo="Typo.h4" Style="width: 100%; font-family: 'Pacifico', cursive;">
            Justinian Codes
        </MudText>

        <NavMenu />

    </MudAppBar>

    <MudMainContent>
        @Body
