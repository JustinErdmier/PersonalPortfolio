        {
            Primary = "#4275fa",
            Secondary = "#2e2d56",
            Tertiary = "#929292",
            TextPrimary = "#5f5e79",
            Background = "#ffffff"
        },
        Typography = new Typography
        {
            Default = new Default
            {
                FontFamily = new[] { "Poppins", "sans-serif" },
                FontSize = "1rem",
                LineHeight = 1
            }
        }
    };
}

